  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h2>Testing Bonus (15 points)</h2>
    </div>
    <div class="card-body">
      <div class="form-group mb-3">
        <div class="d-flex align-items-center">
          <label class="me-2">Coverage (max 7)</label>
        </div>
        <%= f.number_field "testing_scores[coverage]", 
                          value: code_review.testing_scores["coverage"],
                          class: "form-control score-input",
                          min: 0,
                          max: 7,
                          data: { 
                            code_review_target: "scoreInput",
                            score_type: "testing_scores",
                            score_field: "coverage"
                          } %>
      </div>
      <div class="form-group mb-3">
        <div class="d-flex align-items-center">
          <label class="me-2">Quality (max 5)</label>
        </div>
        <%= f.number_field "testing_scores[quality]", 
                          value: code_review.testing_scores["quality"],
                          class: "form-control score-input",
                          min: 0,
                          max: 5,
                          data: { 
                            code_review_target: "scoreInput",
                            score_type: "testing_scores",
                            score_field: "quality"
                          } %>
      </div>
      <div class="form-group mb-3">
        <div class="d-flex align-items-center">
          <label class="me-2">Edge Cases (max 3)</label>
        </div>
        <%= f.number_field "testing_scores[edge_cases]", 
                          value: code_review.testing_scores["edge_cases"],
                          class: "form-control score-input",
                          min: 0,
                          max: 3,
                          data: { 
                            code_review_target: "scoreInput",
                            score_type: "testing_scores",
                            score_field: "edge_cases"
                          } %>
      </div>
    </div>
  </div>

  <div class="form-group mb-4">
    <%= f.label :non_working_solution, class: "form-check-label" do %>
      <%= f.check_box :non_working_solution, class: "form-check-input" %>
      Non-working Solution (-30 points)
    <% end %>
  </div>

  <div class="form-group mb-4">
    <%= f.label :overall_comments %>
    <%= f.text_area :overall_comments, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", code_reviews_path, class: "btn btn-secondary" %>
  </div>
<% end %> 