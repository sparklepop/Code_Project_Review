<div class="container mt-4" data-controller="code-review" data-code-review-debug-value="true">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>New Code Review</h1>
    <div>
      <%= link_to 'Back', code_reviews_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="review-form-container">
    <%= form_with(model: @code_review, local: true) do |f| %>
      <div class="field">
        <%= f.label :repository_url, "GitHub Repository URL" %>
        <%= f.text_field :repository_url, 
                         placeholder: "https://github.com/username/repository",
                         required: true %>
      </div>
      
      <%= f.submit "Start Code Review", class: "button" %>
    <% end %>
  </div>
</div> 