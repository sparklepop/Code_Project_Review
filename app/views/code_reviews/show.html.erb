<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Code Review</h1>
    <div class="d-flex gap-2">
      <%= link_to 'Edit', edit_code_review_path(@code_review), class: 'btn btn-primary' %>
      <%= link_to 'Back', code_reviews_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h2>Basic Information</h2>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-3"><strong>Repository URL:</strong></div>
        <div class="col-md-9"><%= link_to @code_review.repository_url, @code_review.repository_url, target: '_blank' %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Candidate:</strong></div>
        <div class="col-md-9"><%= @code_review.candidate_name %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Reviewer:</strong></div>
        <div class="col-md-9"><%= @code_review.reviewer_name %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Total Score:</strong></div>
        <div class="col-md-9"><%= @code_review.calculate_total_score %> / 115</div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Assessment Level:</strong></div>
        <div class="col-md-9"><%= @code_review.assessment_level %></div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h2>Scores Breakdown</h2>
    </div>
    <div class="card-body">
      <!-- Code Quality -->
      <div class="card mb-4">
        <div class="card-header">
          <h2>Code Quality and Style (<%= @code_review.calculate_quality_score %> / 35)</h2>
        </div>
        <div class="card-body">
          <div class="ms-4 mb-3">
            <div class="row mb-3">
              <div class="col-md-2">Code Clarity:</div>
              <div class="col-md-2"><%= @code_review.quality_scores["code_clarity"] %> / 15</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.quality_scores["code_clarity_reason"] %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">Naming Conventions:</div>
              <div class="col-md-2"><%= @code_review.quality_scores["naming_conventions"] %> / 10</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.quality_scores["naming_conventions_reason"] %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">Code Organization:</div>
              <div class="col-md-2"><%= @code_review.quality_scores["code_organization"] %> / 10</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.quality_scores["code_organization_reason"] %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Documentation -->
      <div class="card mb-4">
        <div class="card-header">
          <h2>Documentation (<%= @code_review.calculate_documentation_score %> / 20)</h2>
        </div>
        <div class="card-body">
          <div class="ms-4 mb-3">
            <div class="row mb-3">
              <div class="col-md-2">Setup Instructions:</div>
              <div class="col-md-2"><%= @code_review.documentation_scores["setup_instructions"] %> / 8</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.documentation_scores["setup_instructions_reason"] %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">Technical Decisions:</div>
              <div class="col-md-2"><%= @code_review.documentation_scores["technical_decisions"] %> / 7</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.documentation_scores["technical_decisions_reason"] %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">Assumptions:</div>
              <div class="col-md-2"><%= @code_review.documentation_scores["assumptions"] %> / 5</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.documentation_scores["assumptions_reason"] %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Technical Implementation -->
      <div class="card mb-4">
        <div class="card-header">
          <h2>Technical Implementation (<%= @code_review.calculate_technical_score %> / 25)</h2>
        </div>
        <div class="card-body">
          <div class="ms-4 mb-3">
            <div class="row mb-3">
              <div class="col-md-2">Solution Correctness:</div>
              <div class="col-md-2"><%= @code_review.technical_scores["solution_correctness"] %> / 15</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.technical_scores["solution_correctness_reason"] %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">Error Handling:</div>
              <div class="col-md-2"><%= @code_review.technical_scores["error_handling"] %> / 5</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.technical_scores["error_handling_reason"] %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">Language Usage:</div>
              <div class="col-md-2"><%= @code_review.technical_scores["language_usage"] %> / 5</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.technical_scores["language_usage_reason"] %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Problem Solving -->
      <div class="card mb-4">
        <div class="card-header">
          <h2>Problem Solving (<%= @code_review.calculate_problem_solving_score %> / 20)</h2>
        </div>
        <div class="card-body">
          <div class="ms-4 mb-3">
            <div class="row mb-3">
              <div class="col-md-2">Completeness:</div>
              <div class="col-md-2"><%= @code_review.problem_solving_scores["completeness"] %> / 10</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.problem_solving_scores["completeness_reason"] %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">Approach:</div>
              <div class="col-md-2"><%= @code_review.problem_solving_scores["approach"] %> / 10</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.problem_solving_scores["approach_reason"] %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Testing Bonus -->
      <div class="card mb-4">
        <div class="card-header">
          <h2>Testing Bonus (<%= @code_review.calculate_testing_bonus %> / 15)</h2>
        </div>
        <div class="card-body">
          <div class="ms-4 mb-3">
            <div class="row mb-3">
              <div class="col-md-2">Coverage:</div>
              <div class="col-md-2"><%= @code_review.testing_scores["coverage"] %> / 7</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.testing_scores["coverage_reason"] %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">Quality:</div>
              <div class="col-md-2"><%= @code_review.testing_scores["quality"] %> / 5</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.testing_scores["quality_reason"] %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">Edge Cases:</div>
              <div class="col-md-2"><%= @code_review.testing_scores["edge_cases"] %> / 3</div>
              <div class="col-md-2">Reason:</div>
              <div class="col-md-6 text-secondary">
                <%= @code_review.testing_scores["edge_cases_reason"] %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% if @code_review.non_working_solution? %>
        <div class="alert alert-warning">
          <strong>Non-working Solution:</strong> -30 points
        </div>
      <% end %>
    </div>
  </div>

  <% if @code_review.overall_comments.present? %>
    <div class="card mb-4">
      <div class="card-header">
        <h2>Overall Comments</h2>
      </div>
      <div class="card-body">
        <%= simple_format @code_review.overall_comments %>
      </div>
    </div>
  <% end %>

  <div class="delete-section mt-5 pt-4 border-top text-end">
    <%= button_to code_review_path(@code_review), 
                  method: :delete,
                  class: 'btn btn-danger',
                  form: { 
                    data: { 
                      turbo_confirm: 'Are you sure you want to delete this review?' 
                    }
                  } do %>
      <i class="fas fa-trash-alt" style="padding-right: 12px;"></i>Delete Review
    <% end %>
  </div>
</div> 