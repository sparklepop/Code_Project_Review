        <hr class="my-4">
        
        <div class="row align-items-center mb-2">
          <div class="col-md-3">Code Reuse:</div>
          <div class="col-md-2">
            <%= f.number_field "problem_solving_scores[code_reuse][score]", 
                class: "form-control", 
                min: 0, 
                max: 5,
                value: @code_review.problem_solving_scores.dig("code_reuse", "score") %>
          </div>
          <div class="col-md-2 text-muted">(max: 5)</div>
        </div>

        <%= f.text_area "problem_solving_scores[code_reuse][feedback]", 
            class: "form-control form-control-lg mb-4", 
            placeholder: "Enter feedback for Code Reuse...",
            rows: 3,
            value: @code_review.problem_solving_scores.dig("code_reuse", "feedback") %>
      </div>
    </div>

    <!-- Bonus Points -->
    <div class="card mb-4">
      <div class="card-header">
        <h2>Bonus Points (<%= @code_review.bonus_scores["total_score"] %> / 15)</h2>
      </div>
      <div class="card-body">
        <div class="row align-items-center mb-2">
          <div class="col-md-3">Advanced Testing:</div>
          <div class="col-md-2">
            <%= f.number_field "bonus_scores[advanced_testing][score]", 
                class: "form-control", 
                min: 0, 
                max: 5,
                value: @code_review.bonus_scores.dig("advanced_testing", "score") %>
          </div>
