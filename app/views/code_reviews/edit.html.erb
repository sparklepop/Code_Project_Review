        <hr class="my-4">
        
        <div class="row align-items-center mb-2">
          <div class="col-md-3">Performance:</div>
          <div class="col-md-2">
            <%= f.number_field "bonus_scores[performance_considerations][score]", 
                class: "form-control", 
                min: 0, 
                max: 5,
                value: @code_review.bonus_scores.dig("performance_considerations", "score") %>
