<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Code Reviews</h1>
    <div>
      <%= link_to 'New Code Review', new_code_review_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Candidate</th>
          <th>Reviewer</th>
          <th>Repository</th>
          <th>Status</th>
          <th>Score</th>
          <th>Assessment</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @code_reviews.each do |review| %>
          <tr>
            <td><%= review.candidate_name %></td>
            <td><%= review.reviewer_name %></td>
            <td>
              <%= link_to "Link to Repo", review.repository_url, 
                  target: '_blank', 
                  class: 'btn btn-sm btn-outline-secondary' %>
            </td>
            <td><%= review.status.titleize %></td>
            <td><%= review.total_score %> / 115</td>
            <td><%= review.assessment_level %></td>
            <td>
              <%= link_to 'View', review, class: 'btn btn-sm btn-info' %>
              <%= link_to 'Edit', edit_code_review_path(review), class: 'btn btn-sm btn-primary' %>
              <%= button_to 'Delete', review, 
                  method: :delete, 
                  class: 'btn btn-sm btn-danger',
                  form: { 
                    style: 'display: inline-block',
                    data: { 
                      turbo_confirm: 'Are you sure you want to delete this review?' 
                    }
                  } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 