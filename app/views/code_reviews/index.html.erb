<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Code Reviews</h1>
    <div>
      <%= link_to 'New Code Review', new_code_review_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="bg-light">
            <tr>
              <th class="px-4">Candidate</th>
              <th>Reviewer</th>
              <th>Repository</th>
              <th>Score</th>
              <th>Assessment</th>
              <th>Date</th>
              <th class="text-end px-4">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @code_reviews.each do |review| %>
              <tr>
                <td class="px-4">
                  <%= review.candidate_name %>
                </td>
                <td><%= review.reviewer_name %></td>
                <td>
                  <%= link_to "Link to Repo", review.submission_url, 
                      target: '_blank', 
                      class: 'btn btn-sm btn-outline-secondary' %>
                </td>
                <td><%= review.calculate_total_score %> / 115</td>
                <td>
                  <span class="badge <%= assessment_level_class(review.assessment_level) %>">
                    <%= review.assessment_level %>
                  </span>
                </td>
                <td><%= review.created_at.strftime("%b %d, %Y") %></td>
                <td class="text-end px-4">
                  <div class="btn-group">
                    <%= link_to 'View', review, class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to 'Edit', edit_code_review_path(review), class: 'btn btn-sm btn-outline-primary' %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 